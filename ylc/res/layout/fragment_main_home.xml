<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.nangua.xiaomanjflc.widget.SmartScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/adContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_line_v2"
                android:background="@color/main_home_line" />

            <LinearLayout
                android:id="@+id/anno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_anno" />

                <wheel.WheelView
                    android:id="@+id/wv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/pushImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_news" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_line_v2"
                android:background="@color/main_home_line" />

            <LinearLayout
                android:id="@+id/llFunc"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/llNewHand"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="40dp"
                        android:layout_height="0dip"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitEnd"
                        android:src="@drawable/icon_home_new_hand" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="新手福利"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_title_v2" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/main_home_line" />

                <LinearLayout
                    android:id="@+id/llInvite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="40dp"
                        android:layout_height="0dip"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitEnd"
                        android:src="@drawable/icon_home_invite" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="邀请好友"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_title_v2" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/main_home_line" />

                <LinearLayout
                    android:id="@+id/llGuard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="40dp"
                        android:layout_height="0dip"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitEnd"
                        android:src="@drawable/icon_home_guard" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="安全保障"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_title_v2" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_line_v2"
                android:background="@color/main_home_line" />

            <RelativeLayout
                android:id="@+id/product1"
                android:layout_width="match_parent"
                android:layout_height="220dp" >

                <TextView
                    android:id="@+id/jixuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="理财精选"
                    android:textColor="@color/black_v2"
                    android:textSize="@dimen/font_app_v2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/jixuan"
                    android:layout_marginTop="5dp"
                    android:background="@color/main_home_line" />

                <TextView
                    android:id="@+id/tip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/llcontent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textSize="@dimen/font_hint_v2" />

                <LinearLayout
                    android:id="@+id/llcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp" >

                    <TextView
                        android:id="@+id/annualizedGain1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_huge_v2" />

                    <TextView
                        android:id="@+id/percentIcon1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="4dp"
                        android:text="%"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_num_v2" />

                    <LinearLayout
                        android:id="@+id/add_v1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:paddingBottom="5dp"
                            android:text="+"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/font_num_v2" />

                        <TextView
                            android:id="@+id/add1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="15.00"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/font_huge_v2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:paddingBottom="4dp"
                            android:text="%"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/font_num_v2" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/txtAvailable1"
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="可投金额"
                                android:textSize="@dimen/font_hint_v2"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/remainingInvestmentAmount1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                
                                android:gravity="center"
                                android:text="0元"
                                android:textColor="@color/black_v2"
                                android:textSize="@dimen/font_hint_v2" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/limit_title"
                                android:textSize="@dimen/font_hint_v2" />

                            <TextView
                                android:id="@+id/limitTime1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="0个月"
                                android:textColor="@color/black_v2"
                                android:textSize="@dimen/font_hint_v2" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="立即投资"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_num_v2" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_line_v2"
                android:layout_marginTop="5dp"
                android:background="@color/main_home_line" />

            <LinearLayout
                android:id="@+id/product2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/annualizedGain2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="0.00"
                                android:textColor="@color/app_orange"
                                android:textSize="@dimen/font_num_v2" />

                            <TextView
                                android:id="@+id/percentIcon2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="%"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/font_num_v2" />

                            <LinearLayout
                                android:id="@+id/add_v2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:visibility="gone" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:paddingBottom="2.5dp"
                                    android:text="+"
                                    android:textColor="@color/app_orange"
                                    android:textSize="@dimen/font_app_v2" />

                                <TextView
                                    android:id="@+id/add2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:text="15.00"
                                    android:textColor="@color/app_orange"
                                    android:textSize="@dimen/font_num_v2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:text="%"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/font_num_v2" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="@string/invest_rate"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_hint_v2" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/main_home_line" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/limitTime2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="期限0个月"
                                android:textColor="@color/black_v2"
                                android:textSize="@dimen/font_hint_v2" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtAvailable2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="可投金额"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/font_hint_v2"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/remainingInvestmentAmount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/font_hint_v2" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_line_v2"
                android:background="@color/main_home_line" />

            <LinearLayout
                android:id="@+id/product3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/annualizedGain3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="0.00"
                                android:textColor="@color/app_orange"
                                android:textSize="@dimen/font_num_v2" />

                            <TextView
                                android:id="@+id/percentIcon3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="%"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/font_num_v2" />

                            <LinearLayout
                                android:id="@+id/add_v3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:visibility="gone" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:paddingBottom="2.5dp"
                                    android:text="+"
                                    android:textColor="@color/app_orange"
                                    android:textSize="@dimen/font_app_v2" />

                                <TextView
                                    android:id="@+id/add3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:text="15.00"
                                    android:textColor="@color/app_orange"
                                    android:textSize="@dimen/font_num_v2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:text="%"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/font_num_v2" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/invest_rate"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_hint_v2" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/main_home_line" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/limitTime3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="期限0个月"
                                android:textColor="@color/black_v2"
                                android:textSize="@dimen/font_hint_v2" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtAvailable3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="可投金额"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/font_hint_v2" />

                        <TextView
                            android:id="@+id/remainingInvestmentAmount3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/font_hint_v2" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adContainerBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </com.nangua.xiaomanjflc.widget.SmartScrollView>

</LinearLayout>