<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg" >

    <LinearLayout
        android:id="@+id/headLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/header" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headLinear" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/tel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/orange"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/idStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tel"
                    android:gravity="center_vertical"
                    android:text="(未认证)"
                    android:textColor="@color/grey"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/account_goto" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/page_top_v2" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="账户总额(元)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_hint_small_v2" />

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_line_v2"
                        android:gravity="center"
                        android:text="0.00"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_hint_v2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="可用余额"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_hint_small_v2" />

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_line_v2"
                        android:gravity="center"
                        android:text="0.00"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_hint_v2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="我的投资"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_hint_small_v2" />

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_line_v2"
                        android:gravity="center"
                        android:text="0.00"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_hint_v2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/page_bottom_v2"
                android:paddingTop="@dimen/page_top_v2" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="累计收益"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_hint_small_v2" />

                    <TextView
                        android:id="@+id/gain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_line_v2"
                        android:gravity="center"
                        android:text="0.00"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_hint_v2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="预计收益"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_hint_small_v2" />

                    <TextView
                        android:id="@+id/unrepaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_line_v2"
                        android:gravity="center"
                        android:text="0.00"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_hint_v2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="冻结资产"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_hint_small_v2" />

                    <TextView
                        android:id="@+id/frozeAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_line_v2"
                        android:gravity="center"
                        android:text="0.00"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_hint_v2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/cash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/page_line"
                    android:paddingTop="@dimen/page_line"
                    android:text="@string/cash"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_title" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/charge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/page_line"
                    android:paddingTop="@dimen/page_line"
                    android:text="@string/charge"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/font_title" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/invest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_small_line_v2"
                android:background="@color/white"
                android:paddingBottom="@dimen/text_bottom_v2"
                android:paddingLeft="@dimen/page_left_v2"
                android:paddingRight="@dimen/page_right_v2"
                android:paddingTop="@dimen/text_top_v2" >

                <ImageView
                    android:id="@+id/imgInvest"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_invest" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imgInvest"
                    android:background="@null"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="我的投资"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_hint_v2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:gravity="center_vertical"
                    android:src="@drawable/account_goto" />
            </RelativeLayout>
            <!-- 我的消息 -->
            <!--
        <RelativeLayout
            android:id="@+id/news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_small_line_v2"
            android:background="@color/white"
            android:paddingBottom="@dimen/text_bottom_v2"
            android:paddingLeft="@dimen/page_left_v2"
            android:paddingRight="@dimen/page_right_v2"
            android:paddingTop="@dimen/text_top_v2" >

            <TextView 
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@null"
                
                android:gravity="center"
               android:text="我的消息"
                android:textColor="@color/black"
                android:textSize="@dimen/font_hint_v2" />
            
